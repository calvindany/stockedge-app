<%- include('include/header-doc') %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<link rel="stylesheet" href="/css/landing.css">
</head>
<body>
    <%- include('include/navigation') %>
    <header class="d-flex flex-column justify-content-center my-4 p-4">
        <div class="d-flex justify-content-center">
            <h4>Produk Yang Kami Jual</h4>
        </div>
        <div class="d-flex justify-content-center mt-4">
            <form action="GET" class="d-flex justify-content-between align-items-center" style="gap: 20px;">
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1">
                </div>
                <div class=" mb-3">
                    <button type="submit" class="btn btn-primary">Cari</button>
                </div>
            </form>
        </div>
    </header>
    <div class="produk w-100 mt-4 mb-4 d-flex justify-content-center">
      <div class="container d-flex <%= (barang.length < 4) ? 'justify-content-start' : 'justify-content-between' %> row p-4" style="gap: 20px;">
        <% for(let i = 0; i < barang.length; i++) { %>
            <div class="card" style="max-width: 30vh;">
                <img src="/images/<%= barang[i].image %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"><%= barang[i].namabarang %></h5>
                    <p class="card-text"><%= barang[i].stok %></p>
                    <p class="card-text" style="font-weight: bold;">Rp. <%= barang[i].harga %></p>
                    <div class="d-flex" style="gap: 5px;">
                        <button href="#" onclick="changeModalRoute('Pesan')" class="btn btn-success" type="button" data-bs-toggle="modal" data-bs-target="#jumlahModal">Pesan</button>
                        <button href="#" onclick="changeModalRoute('Tambah')" class="btn btn-success" type="button" data-bs-toggle="modal" data-bs-target="#jumlahModal">Tambah</button>

                        <!-- Modal -->
                        <div class="modal fade" id="jumlahModal" tabindex="-1" aria-labelledby="jumlahModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="jumlahModalLabel">Masukkan jumlah barang</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <form method="POST" id="jumlahModalForm">
                                            <div class="mb-3">
                                                <label for="jumlah" class="form-label">Jumlah Barang</label>
                                                <input type="number" class="form-control" id="jumlah">
                                            </div>
                                        </form>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="button" class="btn btn-primary" id="buttonSubmitJumlahModalForm">Simpan</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
      </div>
    </div>
    <script>
        function changeModalRoute(mode){
            const modalElement = document.getElementById('jumlahModalForm');
            const buttonSubmit = document.getElementById('buttonSubmitJumlahModalForm');
            if(mode === 'Pesan'){
                modalElement.setAttribute('action', 'URL Pesan');
                buttonSubmit.innerHTML = 'Pesan'
            } else {
                modalElement.setAttribute('action', 'URL Tambah');
                buttonSubmit.innerHTML = 'Simpan'
            }
        }
    </script>

<%- include('include/footer') %>
<%- include('include/footer-doc') %>
