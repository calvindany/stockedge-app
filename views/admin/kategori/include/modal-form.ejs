<!-- Modal for edit data -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static" style="color: black">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form method="POST" action="/kategori/tambah" name="modal-form" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="kategori" class="form-label">Nama Kategori</label>
            <input type="text" class="form-control" id="kategori" name="kategori"/>
          </div>
          <div class="mb-3">
            <label for="formFile" class="form-label">Gambar</label>
            <div id="urlgambar" class="d-flex justify-content-center w-100"></div>
            <input class="form-control" type="file" id="formFile" name="image" aria-describedby="gambarHelp">
            <div id="gambarHelp" class="form-text">
              Jika tidak ingin mengupdate gambar, biarkan kosong saja
            </div>
          </div>
          <input type="hidden" name="idupdatedkategori" />
          <input type="hidden" value="" name="publicUrl" id="publicUrl">
          <input type="hidden" value="Web Asset" name="destination">
          <div class="modal-footer">
            <!-- Gunakan button ini jika dibutuhkan -->
            <!-- <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button> -->
            <button type="submit" class="btn btn-primary">Simpan</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
